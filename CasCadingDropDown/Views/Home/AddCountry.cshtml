@model CasCadingDropDown.Data.Country

@{
    ViewData["Title"] = "AddCountry";
}

<h1>AddCountry</h1>
<div class="container">
    
    <form asp-controller="Home" asp-action="AddCountry" method="post" class="mt-3">

        <div class="form-group row">
            <label asp-for="CountryName" class="col-sm-2 col-form-label"></label>

            <div class="col-sm-10"></div>
            <input asp-for="CountryName" class="form-control" placeholder="Add Country" />
        </div>


        <div class="form-group row">
            
            <input type="submit" class="form-control btn-block"  value="Add Country" />
        </div>

    </form>
</div>

