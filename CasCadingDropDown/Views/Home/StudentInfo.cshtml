@using CasCadingDropDown.ViewModel;
@model List<StudentDetailViewModel>;
@{
    ViewData["Title"] = "StudentInfo";
}

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Full Name</th>
                <th scope="col">Country</th>
                <th scope="col">City</th>

            </tr>
        </thead>

        @for (int i = 0; i < Model.Count(); i++)
        {
            <tbody>
                <tr>
                    <th scope="row">@Model[i].Name</th>
                    <td>@Model[i].CountryName</td>
                    <td>@Model[i].CityName</td>

                </tr>

            </tbody>

        }



    </table>


